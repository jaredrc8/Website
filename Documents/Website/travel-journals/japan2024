            [36.5597, 136.6520], // Kanazawa
            [36.2710, 136.8986], // Shirakawa
            [36.1461, 137.2522],  // Takayama
            [35.6764, 139.6500] // Tokyo
        ];

        const theIcon = document.createElement('i');
        theIcon.classList.add('fas', 'map-pin');
        theIcon.style.color = 'gold';
        theIcon.style.fontSize = '24px';

        coords.forEach(coord => {
            L.marker(coord).addTo(map);
        });

        const route = L.polyline(coords, {
            color: 'black',
            weight: 4,
            opacity: 0.7
        }).addTo(map);

        map.fitBounds(route.getBounds());

        map.setZoom(map.getZoom() - 1);

        </script>
